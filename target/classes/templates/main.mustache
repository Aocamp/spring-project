<html>
<body>
<div>
    <form method="post">
        <input type="text" name="text" placeholder="Input your message">
        <input type="text" name="tag" placeholder="Tag">
        <button type="submit">Input</button>
    </form>
</div>

<div>
    <form method="get">
        <button type="submit">Get all messages</button>
    </form>
</div>

<div> List of messages </div>
{{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
    </div>
{{/messages}}
</body>
</html>